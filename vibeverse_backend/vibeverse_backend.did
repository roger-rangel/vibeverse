type Nft = record {
    "id": nat;
    "name": text;
    "description": text;
    "limit": opt nat;
    "minted": nat;
    "image_url": opt text;
    "creator": principal;
};

type Creator = record {
    "principal": principal;
    "name": text;
};

service : {
    "create_collection": (text, text, bool, opt nat, opt text) -> (text);
    "update_nft_metadata": (nat, text, text, opt text) -> (text);
    "get_nft": (nat) -> (opt Nft);
    "set_creator_metadata": (text) -> (text);
    "mint_nft": (nat, principal) -> (text);
    "transfer_nft": (nat, principal) -> (text);
    "get_creator_metadata": () -> (opt Creator);
    "get_nfts_of_creator": (principal) -> (vec Nft);
    "get_nfts_of_caller": () -> (vec Nft);
    "get_nfts_of_user": (principal) -> (vec Nft);
    "get_nft_count": () -> (nat);
}
